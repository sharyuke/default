<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_10"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:layout_marginHorizontal="40dp">

    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="提示" />

    <TextView
        android:id="@+id/dialog_confirm_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        tools:text="消息" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_bg" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_confirm_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_click_left_bottom_10"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="取消"
            android:textColor="#2196F3" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_bg" />

        <TextView
            android:id="@+id/dialog_confirm_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_click_right_bottom_10"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="确定" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>